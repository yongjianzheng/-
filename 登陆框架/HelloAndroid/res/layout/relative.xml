<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biz_font_default"
        
        android:id="@+id/layout1"
        android:padding="12dp"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/title_back_normal"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登入网易新闻"
            style="@style/mytxtstyle"
            android:layout_centerInParent="true"/>
      
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
         android:background="#fff"
        >
        <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp">
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱号或手机号"
            style="@style/mytxtstyle1"/>
          <EditText 
           android:id="@+id/username"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff"
            />
        </LinearLayout>
        <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:padding="15dp"
        >
        
          <TextView 
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码          "
            style="@style/mytxtstyle1"/>
         <EditText 
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:background="#fff"
           />
      </LinearLayout>
    </LinearLayout>
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
      
        android:layout_below="@+id/layout2"
        android:id="@+id/layout3"
        android:padding="15dp">"
     <Button 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/login"
            android:textSize="20sp"
            android:background="@drawable/abc_popup_background_mtrl_mult"
            android:text="登录"/>
     
    </LinearLayout>
   
    <RelativeLayout
                android:id="@+id/layout4"
                android:layout_below="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
             
        >
         <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速登录"
                android:layout_centerInParent="true"
                />
       </RelativeLayout>
       <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout4"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_alignParentBottom="true"
           >
           
              <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/logo_wechat"
                    /> 
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="微信"/>
             </LinearLayout>
              <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/logo_sinaweibo"
                    /> 
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="新浪微博"/>
             </LinearLayout>
               <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                 android:gravity="center"
                >
                <ImageView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/logo_qq"
                    /> 
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="腾讯QQ"/>
             </LinearLayout>
         </LinearLayout>
      <RelativeLayout 
   
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:padding="10dp"
         
        >
        <Button
           android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="快速注册"
            style="@style/mytxtstyle1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:layout_alignParentRight="true"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号?"
            style="@style/mytxtstyle1"
            android:layout_toLeftOf="@+id/register"/>
    </RelativeLayout>

    

</RelativeLayout>
